    ViewData["Title"] = "Create";
}

<h1>Buy</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zzzzaname" class="control-label"></label>
                <input asp-for="Zzzzaname" class="form-control" />
                <span asp-validation-for="Zzzzaname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Toppings" class="control-label"></label>
                <input asp-for="Toppings" class="form-control" />
